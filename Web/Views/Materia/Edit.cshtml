@model Web.Features.Materia.Request.MateriaRequest
@{
    ViewData["Title"] = "Editar Estudiante";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Editar Materia</h2>
    </div>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Codigo" class="form-label"></label>
            <input asp-for="Codigo" class="form-control" />
            <span asp-validation-for="Codigo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Creditos" class="form-label"></label>
            <input asp-for="Creditos" class="form-control" />
            <span asp-validation-for="Creditos" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <label asp-for="Activo" class="form-check-label">¿Activo?</label>
            <input asp-for="Activo" class="form-check-input" />
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
