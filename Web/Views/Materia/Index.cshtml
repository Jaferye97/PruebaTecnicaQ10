@{
}
@model IEnumerable<Domain.Model.Materia>

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mx-auto">Materias</h2>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr class="text-center">
                <th>Nombre</th>
                <th>Documento</th>
                <th>Correo</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var materia in Model)
            {
                <tr>
                    <td>@materia.Nombre</td>
                    <td>@materia.Codigo</td>
                    <td>@materia.Creditos</td>
                    <td class="text-center">
                        @if (materia.Activo)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactivo</span>
                        }
                    </td>
                    <td class="text-center">
                        <form asp-action="ToggleActivo" asp-route-id="@materia.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm @(materia.Activo ? "btn-danger" : "btn-success")">
                                @(materia.Activo ? "Desactivar" : "Activar")
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
