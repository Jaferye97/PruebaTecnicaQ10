@{
}
@model IEnumerable<Domain.Model.Estudiante>

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mx-auto">Estudiantes</h2>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr class="text-center">
                <th>Nombre</th>
                <th>Documento</th>
                <th>Correo</th>
                <th>Estado</th>
                <th >Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var estudiante in Model)
            {
                <tr>
                    <td>@estudiante.Nombre</td>
                    <td>@estudiante.Documento</td>
                    <td>@estudiante.Correo</td>
                    <td class="text-center">
                        @if (estudiante.Activo)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactivo</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@estudiante.Id" class="btn btn-sm btn-warning me-2">Editar</a>
                        <form asp-action="ToggleActivo" asp-route-id="@estudiante.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm @(estudiante.Activo ? "btn-danger" : "btn-success")">
                                @(estudiante.Activo ? "Desactivar" : "Activar")
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
